@inject IDiffService DiffService
@inject IJSRuntime JS

<div class="diff-panel">
    <div class="diff-toolbar">
        <button class="toolbar-btn" @onclick="() => PasteToLeft()" title="Paste to left">
            <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
                <path d="M4 1.5H3a2 2 0 0 0-2 2V14a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V3.5a2 2 0 0 0-2-2h-1v1h1a1 1 0 0 1 1 1V14a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1V3.5a1 1 0 0 1 1-1h1v-1z"/>
                <path d="M9.5 1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-3a.5.5 0 0 1-.5-.5v-1a.5.5 0 0 1 .5-.5h3zm-3-1A1.5 1.5 0 0 0 5 1.5v1A1.5 1.5 0 0 0 6.5 4h3A1.5 1.5 0 0 0 11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3z"/>
            </svg>
            Paste Left
        </button>
        <button class="toolbar-btn" @onclick="() => PasteToRight()" title="Paste to right">
            <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
                <path d="M4 1.5H3a2 2 0 0 0-2 2V14a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V3.5a2 2 0 0 0-2-2h-1v1h1a1 1 0 0 1 1 1V14a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1V3.5a1 1 0 0 1 1-1h1v-1z"/>
                <path d="M9.5 1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-3a.5.5 0 0 1-.5-.5v-1a.5.5 0 0 1 .5-.5h3zm-3-1A1.5 1.5 0 0 0 5 1.5v1A1.5 1.5 0 0 0 6.5 4h3A1.5 1.5 0 0 0 11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3z"/>
            </svg>
            Paste Right
        </button>
        <button class="toolbar-btn" @onclick="SwapSides" title="Swap left and right">
            <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
                <path fill-rule="evenodd" d="M1 11.5a.5.5 0 0 0 .5.5h11.793l-3.147 3.146a.5.5 0 0 0 .708.708l4-4a.5.5 0 0 0 0-.708l-4-4a.5.5 0 0 0-.708.708L13.293 11H1.5a.5.5 0 0 0-.5.5zm14-7a.5.5 0 0 1-.5.5H2.707l3.147 3.146a.5.5 0 1 1-.708.708l-4-4a.5.5 0 0 1 0-.708l4-4a.5.5 0 1 1 .708.708L2.707 4H14.5a.5.5 0 0 1 .5.5z"/>
            </svg>
            Swap
        </button>
        <button class="toolbar-btn primary" @onclick="ComputeDiff" title="Compare texts">
            <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
                <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
                <path d="M2 2a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V2zm2-1a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H4z"/>
            </svg>
            Compare
        </button>
        <button class="toolbar-btn" @onclick="Clear" title="Clear all">
            <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
                <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z"/>
            </svg>
            Clear
        </button>

        @if (_diffResult != null)
        {
            <div class="diff-stats">
                <span class="stat added">+@_diffResult.LinesAdded</span>
                <span class="stat removed">-@_diffResult.LinesRemoved</span>
                <span class="stat unchanged">@_diffResult.LinesUnchanged unchanged</span>
            </div>
        }
    </div>

    <div class="diff-content">
        @if (_diffResult == null)
        {
            <!-- Input mode: two text areas -->
            <div class="diff-input-pane">
                <div class="pane-header">
                    <span>Left (Original)</span>
                </div>
                <textarea class="diff-textarea"
                          @bind="_leftText"
                          @bind:event="oninput"
                          placeholder="Paste or type the original text..."></textarea>
            </div>
            <div class="diff-input-pane">
                <div class="pane-header">
                    <span>Right (Modified)</span>
                </div>
                <textarea class="diff-textarea"
                          @bind="_rightText"
                          @bind:event="oninput"
                          placeholder="Paste or type the modified text..."></textarea>
            </div>
        }
        else
        {
            <!-- Diff view mode -->
            <div class="diff-view">
                <div class="diff-lines">
                    @foreach (var line in _diffResult.Lines)
                    {
                        <div class="diff-line @line.Type.ToString().ToLower()">
                            <div class="line-numbers">
                                <span class="line-num left">@(line.LeftLineNumber?.ToString() ?? "")</span>
                                <span class="line-num right">@(line.RightLineNumber?.ToString() ?? "")</span>
                            </div>
                            <div class="line-indicator">
                                @switch (line.Type)
                                {
                                    case DiffLineType.Added:
                                        <span>+</span>
                                        break;
                                    case DiffLineType.Removed:
                                        <span>-</span>
                                        break;
                                    default:
                                        <span>&nbsp;</span>
                                        break;
                                }
                            </div>
                            <div class="line-content">
                                <pre>@(line.LeftContent ?? line.RightContent ?? "")</pre>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</div>

@code {
    private string _leftText = "";
    private string _rightText = "";
    private DiffResult? _diffResult;

    private void ComputeDiff()
    {
        if (string.IsNullOrEmpty(_leftText) && string.IsNullOrEmpty(_rightText))
        {
            return;
        }

        _diffResult = DiffService.ComputeDiff(_leftText, _rightText);
    }

    private async Task PasteToLeft()
    {
        try
        {
            _leftText = await JS.InvokeAsync<string>("navigator.clipboard.readText");
            _diffResult = null;
        }
        catch { }
    }

    private async Task PasteToRight()
    {
        try
        {
            _rightText = await JS.InvokeAsync<string>("navigator.clipboard.readText");
            _diffResult = null;
        }
        catch { }
    }

    private void SwapSides()
    {
        (_leftText, _rightText) = (_rightText, _leftText);
        _diffResult = null;
    }

    private void Clear()
    {
        _leftText = "";
        _rightText = "";
        _diffResult = null;
    }
}
