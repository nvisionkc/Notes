@using Notes.Services
@implements IDisposable

<div class="clipboard-panel">
    <div class="clipboard-header">
        <h2>Clipboard History</h2>
        @if (_clipboardService?.History.Count > 0)
        {
            <button class="btn-clear" @onclick="ClearHistory" title="Clear All">
                <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
                    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                    <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                </svg>
            </button>
        }
    </div>

    <div class="clipboard-list">
        @if (_clipboardService?.History.Count == 0)
        {
            <div class="empty-state">
                <p>No clipboard history</p>
                <p>Copy text to see it here</p>
            </div>
        }
        else if (_clipboardService != null)
        {
            @foreach (var item in _clipboardService.History)
            {
                <div class="clipboard-item @(item.Id == _selectedId ? "selected" : "") @(item.IsImage ? "image-item" : "")">
                    <div class="clipboard-content" @onclick="@(() => SelectItem(item))">
                        @if (item.IsImage)
                        {
                            <div class="clipboard-image-preview">
                                <img src="data:image/bmp;base64,@item.Content" alt="Clipboard image" />
                            </div>
                            <div class="clipboard-time">@FormatTime(item.CopiedAt)</div>
                        }
                        else
                        {
                            <div class="clipboard-preview">@item.Preview</div>
                            <div class="clipboard-time">@FormatTime(item.CopiedAt)</div>
                        }
                    </div>
                    <div class="clipboard-actions">
                        @if (!item.IsImage)
                        {
                            <button class="btn-action" @onclick="@(() => ConvertToNote(item))" title="Convert to Note">
                                <svg width="14" height="14" viewBox="0 0 16 16" fill="currentColor">
                                    <path d="M14 4.5V14a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2h5.5L14 4.5zm-3 0A1.5 1.5 0 0 1 9.5 3V1H4a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V4.5h-2z"/>
                                </svg>
                            </button>
                        }
                        <button class="btn-action btn-delete" @onclick="@(() => RemoveItem(item.Id))" title="Remove">
                            <svg width="14" height="14" viewBox="0 0 16 16" fill="currentColor">
                                <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
                            </svg>
                        </button>
                    </div>
                </div>
            }
        }
    </div>
</div>

@code {
#if WINDOWS
    [Inject] private ClipboardService? _clipboardService { get; set; }
#else
    private object? _clipboardService = null;
#endif

    private int? _selectedId;

    [Parameter] public EventCallback<string> OnConvertToNote { get; set; }
    [Parameter] public EventCallback<string> OnItemSelected { get; set; }

    protected override void OnInitialized()
    {
#if WINDOWS
        if (_clipboardService != null)
        {
            _clipboardService.ClipboardChanged += OnClipboardChanged;
        }
#endif
    }

    private void OnClipboardChanged()
    {
        InvokeAsync(StateHasChanged);
    }

    private async Task SelectItem(ClipboardItem item)
    {
        _selectedId = item.Id;
        await OnItemSelected.InvokeAsync(item.Content);
    }

    private async Task ConvertToNote(ClipboardItem item)
    {
        await OnConvertToNote.InvokeAsync(item.Content);
    }

    private void RemoveItem(int id)
    {
#if WINDOWS
        _clipboardService?.RemoveFromHistory(id);
#endif
    }

    private void ClearHistory()
    {
#if WINDOWS
        _clipboardService?.ClearHistory();
#endif
    }

    private string FormatTime(DateTime time)
    {
        var diff = DateTime.Now - time;
        if (diff.TotalMinutes < 1) return "Just now";
        if (diff.TotalMinutes < 60) return $"{(int)diff.TotalMinutes}m ago";
        if (diff.TotalHours < 24) return $"{(int)diff.TotalHours}h ago";
        return time.ToString("MMM d");
    }

    public void Dispose()
    {
#if WINDOWS
        if (_clipboardService != null)
        {
            _clipboardService.ClipboardChanged -= OnClipboardChanged;
        }
#endif
    }
}
