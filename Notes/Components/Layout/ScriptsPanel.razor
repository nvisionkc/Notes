@inject IScriptingService ScriptingService
@using Notes.Components.Scripts

<div class="scripts-panel">
    <div class="scripts-header">
        <h2>Scripts</h2>
        <div class="header-actions">
            <button class="btn-templates" @onclick="OpenTemplates" title="Browse Templates">
                <svg width="14" height="14" viewBox="0 0 16 16" fill="currentColor">
                    <path d="M9.828 3h3.982a2 2 0 0 1 1.992 2.181l-.637 7A2 2 0 0 1 13.174 14H2.826a2 2 0 0 1-1.991-1.819l-.637-7a1.99 1.99 0 0 1 .342-1.31L.5 3a2 2 0 0 1 2-2h3.672a2 2 0 0 1 1.414.586l.828.828A2 2 0 0 0 9.828 3zm-8.322.12C1.72 3.042 1.95 3 2.19 3h5.396l-.707-.707A1 1 0 0 0 6.172 2H2.5a1 1 0 0 0-1 .981l.006.139z"/>
                </svg>
            </button>
            <button class="btn-new" @onclick="CreateNewScript" title="New Script">
                <span class="icon">+</span>
            </button>
        </div>
    </div>

    <div class="scripts-list">
        @foreach (var script in _scripts)
        {
            <div class="script-item @(script.Id == SelectedScriptId ? "selected" : "")"
                 @onclick="() => SelectScript(script.Id)">
                <div class="script-content">
                    <div class="script-name">@script.Name</div>
                    <div class="script-meta">
                        @if (script.LastRunAt.HasValue)
                        {
                            <span>Last run: @FormatTime(script.LastRunAt.Value)</span>
                        }
                        else
                        {
                            <span>Never run</span>
                        }
                    </div>
                </div>
                <button class="btn-delete"
                        @onclick="() => DeleteScript(script.Id)"
                        @onclick:stopPropagation="true"
                        title="Delete script">
                    <span class="icon">x</span>
                </button>
            </div>
        }

        @if (_error != null)
        {
            <div class="error-state" style="color: red; padding: 10px;">
                <p>Error: @_error</p>
            </div>
        }
        else if (!_scripts.Any())
        {
            <div class="empty-state">
                <p>No scripts yet.</p>
                <p>Click + to create one.</p>
            </div>
        }
    </div>
</div>

<ScriptTemplateModal IsOpen="_showTemplates"
                     OnClose="CloseTemplates"
                     OnTemplateImported="OnTemplateImported" />

@code {
    [Parameter] public int? SelectedScriptId { get; set; }
    [Parameter] public EventCallback<int?> SelectedScriptIdChanged { get; set; }
    [Parameter] public EventCallback OnNewScript { get; set; }
    [Parameter] public EventCallback<int> OnScriptDeleted { get; set; }

    private List<Script> _scripts = new();
    private string? _error;
    private bool _showTemplates;

    protected override async Task OnInitializedAsync()
    {
        await RefreshScriptsAsync();
    }

    public async Task RefreshScriptsAsync()
    {
        try
        {
            _scripts = await ScriptingService.GetAllScriptsAsync();
            _error = null;
        }
        catch (Exception ex)
        {
            _error = ex.Message;
            _scripts = new();
        }
        StateHasChanged();
    }

    private async Task SelectScript(int id)
    {
        await SelectedScriptIdChanged.InvokeAsync(id);
    }

    private async Task CreateNewScript()
    {
        await OnNewScript.InvokeAsync();
    }

    private async Task DeleteScript(int id)
    {
        await ScriptingService.DeleteScriptAsync(id);
        await OnScriptDeleted.InvokeAsync(id);
        await RefreshScriptsAsync();
    }

    private string FormatTime(DateTime time)
    {
        var diff = DateTime.UtcNow - time;
        if (diff.TotalMinutes < 1) return "Just now";
        if (diff.TotalMinutes < 60) return $"{(int)diff.TotalMinutes}m ago";
        if (diff.TotalHours < 24) return $"{(int)diff.TotalHours}h ago";
        return time.ToLocalTime().ToString("MMM d");
    }

    private void OpenTemplates()
    {
        _showTemplates = true;
    }

    private void CloseTemplates()
    {
        _showTemplates = false;
    }

    private async Task OnTemplateImported(int scriptId)
    {
        await RefreshScriptsAsync();
        await SelectedScriptIdChanged.InvokeAsync(scriptId);
    }
}
